---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
  xmlns:content="http://purl.org/rss/1.0/modules/content/"
  xmlns:wfw="http://wellformedweb.org/CommentAPI/"
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
  xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
  xmlns:georss="http://www.georss.org/georss"
  xmlns:geo="http://www.w3.org/2003/01/geo/wgs84_pos#"
>
  <channel>
    <title>Tactics Journal</title>
    <link>{{ site.url }}</link>
    <description>Analyzing football tactics by Kyle Boas</description>
    <language>en-us</language>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <atom:link href="{{ site.url }}/feed" rel="self" type="application/rss+xml" />

    {% for post in site.posts %}
      {% unless post.categories contains 'Notes' %}
        <item>
          <title>{{ post.title }}</title>
          {% if post.link %}
            <link>{{ post.link }}</link>
            <guid isPermaLink="true">{{ post.link }}</guid>
          {% else %}
            <link>{{ site.url }}{{ post.url | uri_escape }}</link>
            <guid isPermaLink="true">{{ site.url }}{{ post.url | uri_escape }}</guid>
          {% endif %}
          <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
          <dc:creator><![CDATA[Kyle Boas]]></dc:creator>
          <description><![CDATA[ 
            {% assign excerpt = post.excerpt | strip_html | replace: '\n', ' ' | replace: '\r', ' ' %}
            {% if excerpt.size > 255 %}
              {{ excerpt | truncatewords: 50, '...' }}
            {% else %}
              {{ excerpt }}
            {% endif %}
          ]]></description>
          <content:encoded><![CDATA[
{{ post.content 
  | replace: '<!---more--->', '' 
  | replace: '<p>\\s*\\n\\s*</p>', '<p>' 
  | replace: '\n\n', '' 
  | replace: /<form.*?>.*?<\/form>/m, '' 
  | strip_newlines }}
]]></content:encoded>
        </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>
